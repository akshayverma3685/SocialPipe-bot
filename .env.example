# Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-your-telegram-token
OWNER_TELEGRAM_ID=000000000   # your chat id to receive notifications (integer)

# Domain + webhook security
DOMAIN=https://your-app.up.railway.app
WEBHOOK_VERIFY_TOKEN=supersecret123

# Instagram (Meta)
INSTAGRAM_CLIENT_ID=your_client_id
INSTAGRAM_CLIENT_SECRET=your_client_secret
INSTAGRAM_REDIRECT_URI=${DOMAIN}/oauth/instagram
FB_PAGE_LONG_LIVED_TOKEN=your_fb_long_lived_token  # if replying to comments

# WhatsApp Cloud
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=1234567890
WHATSAPP_BUSINESS_ACCOUNT_ID=1234567890

# Twitter (X) API v2
TWITTER_API_KEY=your_key
TWITTER_API_SECRET=your_secret
TWITTER_BEARER=your_bearer_token

# Database (SQLite by default; replace with Postgres URL in prod)
DATABASE_URL=sqlite:///./socialpipe.db
